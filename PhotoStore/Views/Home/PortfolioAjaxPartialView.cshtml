@model PhotoStore.Models.ProductPagedListViewModel

@{
    Layout = null;
}


        @foreach (var product in Model.Products)
        {
            
            <a href="@(Url.Content("~/Content"))/@(Domain.Constants.PRODUCT_IMAGE_FOLDER)/@(String.Format("Image"))@product.ProductID@product.ImgExt" 
               class="showcase portfolio-modal" data-rel="lightcase:myCollection">
               
                <img src="@(Url.Content("~/Content"))/@(Domain.Constants.PRODUCT_IMAGE_FOLDER)/@(Domain.Constants.PRODUCT_IMAGE_PREVIEW_FOLDER)/@(String.Format("Image"))@product.ProductID@product.ImgExt" 
                     alt="@product.Category.CategoryName"/>
            </a>
            
            
        }
